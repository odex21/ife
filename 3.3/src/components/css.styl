.form
    margin: 5px
    
    
    .form-item
        position relative
        margin 15px
        margin-left: 100px
        margin-bottom: 50px
        .label 
            float left
            position absolute
            top: 8px
            left: -100px
            
            span 
                color red
        
        input 
            width: 200px
            height: 30px
            outline: none
            padding 0
            padding-left: 10px
            border: none 
            border: solid 1px rgba(0, 0, 0, 0.4)
            
 
        button
            background-color:rgba(3, 169, 244, 0.7)
            border: none 
            color: white
            width: 50px
            height: 25px
            margin-right: 20px
        
        .help-text
            color: red
            position absolute
            font-size: 12px
            bottom: -20px
            display block

            &:before
                content: '! '
        
.error
    input  
        border solid  1px red !important
    